<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_header_paper"
        card_view:cardUseCompatPadding="true"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#009688"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="4dp"
                android:textColor="#FFFFFF"
                android:text="Descricao do Paper teste. Descricao TESTE TESTES TES TES TES ETSES HGFKDGFJKDGFKJDKJGFDKJG KJFDG KJFDGJKFD GFD"
                android:id="@+id/txt_header_paper"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
