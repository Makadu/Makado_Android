<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.makadu.makaduevento.UI.InteractiveVoting">

    <ScrollView android:id="@+id/detalhe_interactive_voting_form" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chronometer_interactive"
                android:textSize="30dp"
                android:textColor="#000000"
                android:text="00:00"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="Aqui vai a pergunta interativa, poderÃ¡ ser uma pergunta maior"
                android:id="@+id/txt_question_interactive"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp" />

            <RadioGroup
                android:id="@+id/radioGroupInterativa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txt_question_interactive">

            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radioGroupInterativa"
                android:layout_marginTop="20dp"
                android:background="@drawable/radius_button"
                android:textColor="@color/white"
                android:id="@+id/btn_vota_interativa"
                android:text="Votar">
            </Button>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
