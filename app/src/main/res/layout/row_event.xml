<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Relative_row_evento1">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_evento"
        card_view:cardUseCompatPadding="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="4dp"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Relative_row_evento2">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="#004D40"
                android:textSize="20dp"
                android:text="Nome do Evento Maior que tem..."
                android:id="@+id/txt_principal_Nome"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:id="@+id/linear_principal_local_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txt_principal_Nome">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:textColor="#004D40"
                android:text="Porto Alegre"
                android:id="@+id/txtCidade"
              />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_principal_local_hora_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_below="@id/linear_principal_local_hora">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:textColor="#004D40"
                android:text="01/01/2011"
                android:id="@+id/txtDataInicio"
             />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="a"
                android:layout_marginLeft="-4dp"
                android:textColor="#004D40"
                android:id="@+id/txta"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="01/01/2020"
                android:id="@+id/txtDataFim"
                android:textColor="#004D40" />
            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginRight="9dp"
                android:id="@+id/img_patrocinador"
                android:contentDescription="imgEvento"
                android:layout_toLeftOf="@+id/img_avancar"
                android:layout_centerVertical="true"
                android:src="@drawable/logomakadu"
               />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/img_avancar"
                android:src="@drawable/forward25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>